
<% @clip_display.each do |clip| %>
  <div id="clip<%= clip.id %>" >
  <li><a href="/clips/<%= clip[:id] %>"><%= clip[:title] %>:</a> <%= clip[:description] %> by: <%= clip[:performer] %>
    <br><audio id="ott" controls src="<%=clip.mp3.url%>"></audio>
  </li>

  	<button class="like">Like</button>Likes: <p><%=clip.likes.count%></p>
</div>
<% end %>
